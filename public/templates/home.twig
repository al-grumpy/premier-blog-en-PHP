{% extends 'base.twig' %}

{% block head %}
    <title>Accueil</title>
{% endblock %}

{% block content %}
    <a href="../public/index.php?route=addArticle">Ajouter un article</a>
    {% for article in articles %}
            <h2><a href="../public/index.php?route=article&idArt={{ loop.index }}">{{article.title}}</a></h2>
            <p>{{article.chapo}}</p>
            <p>{{article.author}}</p>
            <p>Créé le : {{article.date_added}}</p>
    {% endfor %}
{% endblock %}
